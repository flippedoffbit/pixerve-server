{
  "completionCallback": "https://api.maindb.com/image/callback",

  "priority": 0, // 0 = realtime (blocking), 1 = queued (async)

  "keepOriginal": true, // keep uploaded source image in storage

  "formats": {
    "jpg": {
      "settings": {
        "quality": 80, // acceptable compression ratio
        "speed": 11    // 0=best quality, 11=fastest (encoder-specific)
      },
      "sizes": [
        [128, 256],   // explicit width x height
        [256]         // shorthand: square, 256x256
      ]
    },
    "webp": {
      "settings": {
        "quality": 85,
        "speed": 4
      },
      "sizes": [[512, 512]]
    }
  },

  "storage": {
    "directHost": true, // host under Pixerveâ€™s /images route (local FS)
    "s3": {
      "enabled": false,
      "key": "S3_KEY",
      "secret": "S3_SECRET",
      "region": "us-east-1",
      "bucket": "pixerve-images",
      "dir": "products/sku123/"
    },
    "sftp": {
      "enabled": false,
      "username": "username",
      "password": "password",
      "host": "ftp.example.com",
      "dir": "/uploads/"
    }
  }
}
